<div class="container py-3">
  <h1>My Tasks</h1>
  <ul class="tasks">
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %></li>
      <p><%= task.details %></p>
      <% if(task.completed) %>
        <p><i class="fa-solid fa-square-check"></i></p>
      <% else %>
        <p><i class="fa-solid fa-square"></i></p>
      <% end %>

    <% end %>
  </ul>

  <%= link_to "Add a New Task", new_task_path %>
</div>

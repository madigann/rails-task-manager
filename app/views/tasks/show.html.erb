<div class="container py-3">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>

  <%= link_to "Back to list", tasks_path %>
  <p></p>
  <%= link_to "Edit", edit_task_path %>
  <p></p>
  <%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
</div>
